{% extends 'base.html.twig' %}

{% block body %}

    {#{{ dump(tapa) }}#}

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <h1 class="mt-4 mb-3">Tapa</h1>

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <img class="img-fluid rounded mb-3 mb-md-0"{%- if tapa.picture|length > 0 -%} src="{{ asset( imgPath ~ tapa.picture) }}"
                {%- else -%} src="http://placehold.it/750x500" {%- endif %} alt="">
            </div>

            <div class="col-md-4">
                <h3 class="my-3">{{ tapa.name|raw }}</h3>
                <p>{{ tapa.description|raw }}</p>
                <h3 class="my-3">Ingredients</h3>

                <ul>
                    {% for ingredient in tapa.ingredients %}
                        <li>{{ ingredient.name }}</li>
                    {% endfor %}
                </ul>

            </div>

        </div>
        <!-- /.row -->

        <!-- Related Projects Row -->
        <h3 class="my-4">Related Projects</h3>

        <div class="row">

            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="http://placehold.it/500x300" alt="">
                </a>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="http://placehold.it/500x300" alt="">
                </a>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="http://placehold.it/500x300" alt="">
                </a>
            </div>

            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="http://placehold.it/500x300" alt="">
                </a>
            </div>

        </div>
        <!-- /.row -->
        <br>

    </div>

{% endblock %}