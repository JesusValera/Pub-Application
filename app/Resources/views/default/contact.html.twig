{% extends 'base.html.twig' %}

{% block body %}
    <!-- Page Content -->
    <div class="container">

        <h1 class="mt-4 mb-3">Contact
            <small>Pubs</small>
        </h1>

        {% for loc in location %}
            {% if loc == 'Murcia' or loc == 'Valencia' or loc == 'Madrid' %}
                <!-- Content Row -->
                <div class="row">
                    <!-- Map Column -->
                    <div class="col-lg-8 mb-4">
                        <!-- Embedded Google Map -->
                        <iframe width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0"
                                marginwidth="0"
                                src="http://maps.google.com/maps?hl=en&amp;ie=UTF8&amp;ll=39.8028355,-4.9221535&amp;t=m&amp;z=5&amp;output=embed"></iframe>
                    </div>
                    <!-- Contact Details Column -->
                    <div class="col-lg-4 mb-4">
                        <h3>Contact Details</h3>
                        <h5>{{ loc }}</h5>
                        <h6>Great Square 31</h6>
                        <br>
                        <p>Phone: +34 666 555 444</p>
                        <p>Email: <a href="mailto:name@example.com">name@example.com</a></p>
                        <p>Hours: Monday - Friday: 9:00 AM to 5:00 PM</p>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

    </div>
{% endblock %}