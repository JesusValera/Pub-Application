{% extends 'base.html.twig' %}

{% block title %}Bookings{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="my-4 mb-3">Jesus' Pub
            <small>Bookings</small>
        </h1>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <table class="table">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Date</th>
                        <th scope="col">Diner's number</th>
                        <th scope="col">Observations</th>
                        <th scope="col">Options</th>
                    </tr>
                    </thead>
                    {% for booking in bookings %}
                        <tr>
                            <th scope="row">{{ booking.id }}</th>
                            <td>{{ booking.date|date("Y/m/d H:i") }}</td>
                            <td>{{ booking.diner }}</td>
                            <td>{{ booking.observations[0:200]|raw }}</td>
                            <td><a href="{{ path('updateBooking', {'id' : booking.id}) }}"><i class="fas fa-pen"></i></a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
    <br>
    <br>
{% endblock %}
